<div class="section">
	<div class="container is-centered">
	  <div class="columns">
		  <div class="column is-half">
			  <h2 class="title is-2">Edit Profile</h2>
          <%= simple_form_for(resource, as: resource_name, url: edit_user_registration_path(resource_name)) do |f| %>
	        <%= f.error_notification %>

		      <div class="field">
	  	      <div class="control">
	            <%= f.input :email, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	      </div>
		      </div>
  
		  
          <div class="field">
            <div class="control">
              <%= f.input :password, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>		
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Make Changes", class:"button is-info is-medium" %>
            </div>
          </div>
          <% end %>
      </div>
      <div class="column is-half">
        <div class="content">
          <h2 class="title is-2">List of Events</h2>
            <ul>
              <% @user.created_events.each do | event | %>
                <li><%= event.title %> @ <%= event.location %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </div>
  </div>
</div>