<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
      <h2 class="title is-2">New Event</h2>
      <%= simple_form_for(@event) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="field">
          <div class="control">
          <%= f.input :title, label: "Event Title:"%>
          </div>
        </div>

        <div class="field">
          <div class="control">
          <%= f.input :location, label: "Event Location:"%>
          </div>
        </div>

        <div class="field">
          <div class="control">
          <%= f.button :submit, "Create!", class:"button"%>
          </div>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>